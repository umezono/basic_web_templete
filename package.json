{
  "name": "basic_web_templete",
  "version": "1.0.0",
  "description": "frontend build tool",
  "main": "index.js",
  "scripts": {
    "browser": "node ./tasks/browsersync.js",
    "html:local": "cross-env NODE_ENV=local node ./tasks/ejs.js",
    "html:development": "cross-env NODE_ENV=development node ./tasks/ejs.js",
    "html:production": "cross-env NODE_ENV=production node ./tasks/ejs.js",
    "css:local": "cross-env NODE_ENV=local node ./tasks/postcss.js",
    "css:development": "cross-env NODE_ENV=development node ./tasks/postcss.js",
    "css:production": "cross-env NODE_ENV=production node ./tasks/postcss.js",
    "js:local": "cross-env NODE_ENV=local webpack -w --config webpack.local.js",
    "js:development": "cross-env NODE_ENV=development webpack  --config webpack.dev.js",
    "js:production": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "build:dev": "npm-run-all *:development",
    "build:pro": "npm-run-all *:production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://umezono@github.com/umezono/basic_web_templete.git"
  },
  "keywords": [
    "frontend",
    "html",
    "css",
    "js"
  ],
  "author": "takashi umezono",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umezono/basic_web_templete/issues"
  },
  "homepage": "https://github.com/umezono/basic_web_templete#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.5",
    "ejs": "^2.6.1",
    "eslint": "^5.9.0",
    "eslint-loader": "^2.1.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "glob-base": "^0.3.0",
    "glslify-import-loader": "^0.1.2",
    "glslify-loader": "^2.0.0",
    "license-info-webpack-plugin": "^1.1.0",
    "moment": "^2.22.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.5",
    "postcss-extend": "^1.0.5",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.0",
    "postcss-load-config": "^2.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^4.1.0",
    "postcss-preset-env": "^6.1.1",
    "postcss-simple-vars": "^5.0.1",
    "raw-loader": "^0.5.1",
    "stylelint": "^9.6.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0"
  }
}
